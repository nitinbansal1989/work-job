<div class="row">
	{{#each posts}}
	<div class="card card-dark col-md-3">
		<div class="view overlay hm-white-slight">
			<img src="{{this.imageLink}}" class="img-fluid" alt="">
			<a href="/post/{{this.id}}-{{this.heading}}">
				<div class="mask waves-effect waves-light"></div>
			</a>
		</div>
		<div class="card-block">
			<a class="activator"><i class="fa fa-share-alt"></i></a>
			<h4 class="card-title">{{this.heading}}</h4>
			<hr>
			<p class="card-text">{{this.description}}</p>
			<a href="/post/{{this.id}}-{{this.heading}}" class="d-flex flex-row-reverse">
				<h5 class="waves-effect waves-light p-2">Read more <i class="fa fa-chevron-right"></i></h5>
			</a>
		</div>
	</div>
	{{/each}}
</div>
<!-- Pager -->
<div class="clearfix">
	<a class="btn btn-secondary float-right" href="/?publisher={{publisher}}&tag={{tag}}&limit={{limit}}&offset={{offset}}">Older Posts &rarr;</a>
</div>